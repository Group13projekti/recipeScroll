<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:padding="10dp"
    tools:context=".SettingsFragment">

    <PreferenceCategory app:title="Settings">

        <SwitchPreferenceCompat
            android:id="@+id/switchtheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"

            android:text="Switch Theme"
            app:title="Night Mode"/>


        <SwitchPreferenceCompat
            app:dependency="sync"
            app:title="Notifications" />

    </PreferenceCategory>

    <PreferenceCategory app:title="User Settings">

        <ListPreferenceCompat
            app:fragment="com.example.recipeScroll_v022.logOutFragment"
            app:key="user"
            app:title="Log Out" />

        <ListPreferenceCompat
            app:fragment="com.example.recipeScroll_v022.DeleteUserFragment"
            app:key="user"
            app:title="Delete User" />

    </PreferenceCategory>

</PreferenceScreen>